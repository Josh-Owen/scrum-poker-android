<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/mlParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/card_motion_scene">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="2"
            tools:listitem="@layout/item_card" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvContainer"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:rotationY="-90"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/card_item_background_default"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:rotationY="0"
            tools:visibility="visible">


            <TextView
                android:id="@+id/tvCardValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:textColor="@color/card_item_content_colour_default"
                android:textSize="@dimen/card_item_text_size_large"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck"
                tools:targetApi="o"
                tools:text="100" />

            <ImageView
                android:id="@+id/ivCardIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/card_icon_description"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>